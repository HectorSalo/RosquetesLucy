<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_settings"
    app:startDestination="@id/nav_home_settings">

    <fragment
        android:id="@+id/nav_home_settings"
        android:name="com.skysam.hchirinos.rosqueteslucy.ui.settings.SettingsFragment"
        android:label="@string/title_activity_settings">
        <action
            android:id="@+id/action_nav_home_settings_to_nav_about"
            app:destination="@id/nav_about" />
    </fragment>
    <fragment
        android:id="@+id/nav_about"
        android:name="com.skysam.hchirinos.rosqueteslucy.ui.settings.AboutFragment"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_nav_about_to_nav_home_settings"
            app:destination="@id/nav_home_settings" />
    </fragment>
</navigation>